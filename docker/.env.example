# Estimagator Production Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - You must set these values
# =============================================================================

# Database password (use a strong, unique password)
POSTGRES_PASSWORD=your_secure_database_password_here

# JWT Secret for authentication tokens
# Generate with: openssl rand -base64 64
JWT_SECRET=your_64_character_minimum_secret_key_here

# =============================================================================
# OPTIONAL - These have sensible defaults
# =============================================================================

# Port exposed to Synology reverse proxy (default: 7117)
# Map your subdomain (e.g., estimagator.rhymeswithjazz.com) to this port
FRONTEND_PORT=7117

# Database settings
POSTGRES_USER=pokerpoints
POSTGRES_DB=pokerpoints

# JWT settings
JWT_ISSUER=Estimagator
JWT_AUDIENCE=Estimagator

# =============================================================================
# EMAIL SETTINGS - Required for email verification and password reset
# =============================================================================

# SMTP server configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_SSL=true

# Email sender settings
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Estimagator

# Base URL for email links (your production domain)
EMAIL_BASE_URL=https://estimagator.yourdomain.com
